{
  "schemaVersion": 1,
  "id": "durability-alert-mod",
  "version": "${version}",

  "name": "Durability Alert",
  "icon": "assets/durability-alert-mod/logo.png",
  "description": "The Durability Alert mod alerts the player as the durability of their tool decreases",

  "authors": [
      {
          "name": "mrdillon",
          "contact": {
              "email": "mike@appropriate.io",
              "discord": "mrdillon#3037",
              "twitter": "https://twitter.com/mrdillon"
          }
      }
  ],

  "contact": {
      "issues": "https://github.com/appropriate/durability-alert-mod/issues",
      "sources": "https://github.com/appropriate/durability-alert-mod"
  },

  "license": "MIT",

  "environment": "client",
  "entrypoints": {
      "client": [
          "io.appropriate.minecraft.mods.durability.DurabilityAlertMod"
      ],
      "modmenu": [
          "io.appropriate.minecraft.mods.durability.DurabilityAlertModMenuIntegration"
      ]
  },

  "depends": {
    "cloth-config": "~${cloth_config_version}",
    "fabricloader": ">=${loader_version}",
    "fabric-events-interaction-v0": "*",
    "minecraft": "~${minecraft_version}",
    "java": ">=${java_version}"
  },

  "suggests": {
    "modmenu": "~${modmenu_version}"
  }
}
